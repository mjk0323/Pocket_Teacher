<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inquiry_history_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/inquiry_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 공통 툴바: 부모 패딩 없이 가장자리에 붙도록 -->
        <include layout="@layout/toolbar" />

        <!-- 툴바 아래 컨텐츠에만 패딩 16dp 적용 -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ===== 카드 1: 답변 있음 + 예시 이미지 표시 ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFFFF"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="12dp"
                android:clipToPadding="false"
                android:clipToOutline="false"
                android:foreground="?attr/selectableItemBackground">

                <!-- 질문 제목 -->
                <TextView
                    android:id="@+id/tvTitle_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="앱 이름 뜻"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />

                <!-- 질문 본문 -->
                <TextView
                    android:id="@+id/tvBody_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="손 안의 선생님은 무슨 뜻인가요"
                    android:textSize="14sp"
                    android:textColor="#444444" />

                <!-- 질문 이미지(예시: ex_image) -->
                <ImageView
                    android:id="@+id/ivPhoto_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="240dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ex_image"
                    android:contentDescription="" />

                <!-- 메타 -->
                <TextView
                    android:id="@+id/tvMeta_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="작성일 2025.08.05 06:26"
                    android:textSize="12sp"
                    android:textColor="#888888" />

                <!-- 답변 박스 (회색 배경, 포인트 컬러 노랑) -->
                <LinearLayout
                    android:id="@+id/answer_box_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:background="#F0F0F0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="답변완료"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FFB300" />

                    <TextView
                        android:id="@+id/tvAnswer_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="손 안에서 선생님처럼 기능들을 하나씩 설명해드리고 싶다는 마음을 담아 지었습니다."
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvAnswerMeta_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="담당자 · 2025.08.05 08:10"
                        android:textSize="12sp"
                        android:textColor="#888888" />
                </LinearLayout>
            </LinearLayout>

            <!-- ===== 카드 2: 답변 대기중 + 이미지 없음(영역 숨김) ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFFFF"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="12dp"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="예시질문2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="위에 설명 뜨는게 안 보여요"
                    android:textSize="14sp"
                    android:textColor="#444444" />

                <!-- 이미지 영역(기본 숨김: 사진 없을 때) -->
                <ImageView
                    android:id="@+id/ivPhoto_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="240dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="작성일 2025.08.01 11:32"
                    android:textSize="12sp"
                    android:textColor="#888888" />

                <!-- 답변 대기 표시 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:background="#F0F0F0">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_dot3"
                        android:contentDescription="답변 대기 중"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="답변 대기 중입니다."
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!-- /content_container -->

    </LinearLayout>
</ScrollView>
