<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="8dp">

    <!-- 출발역 말풍선 -->
    <LinearLayout
        android:id="@+id/departure_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/departure_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. 출발역 선택"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="start"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <!-- 출발지/도착지 전환 말풍선 -->
    <LinearLayout
        android:id="@+id/change_location_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/change_location_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발역과\n도착역 전환"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="start"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <!-- 도착역 말풍선 -->
    <LinearLayout
        android:id="@+id/arrival_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/arrival_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. 도착역 선택"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="start"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <!-- 왕복/편도 선택 말풍선 -->
    <LinearLayout
        android:id="@+id/travel_type_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/travel_type_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="왕복/편도 선택"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="start"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <!-- 출발일 말풍선 -->
    <LinearLayout
        android:id="@+id/date_select_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp">

        <TextView
            android:id="@+id/date_select_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.날짜 선택"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- 인원수 예매 말풍선 -->
    <LinearLayout
        android:id="@+id/passenger_count_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/passenger_count_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. 탑승 인원 선택"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp" />
    </LinearLayout>

    <!-- 기타 메뉴 말풍선 -->
    <LinearLayout
        android:id="@+id/etc_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/etc_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. 검색 옵션 선택 "
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp" />
    </LinearLayout>

    <!-- 검색 말풍선 -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp">

        <TextView
            android:id="@+id/search_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색하기"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- SNS 로그인 (카카오톡) 말풍선 -->
    <LinearLayout
        android:id="@+id/kakao_login_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="180dp">

        <TextView
            android:id="@+id/kakao_login_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오톡 계정으로 로그인"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="center" />
    </LinearLayout>


    <!-- 옵션: 인접역 설명 말풍선 -->
    <LinearLayout
        android:id="@+id/nearby_option_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="260dp">

        <TextView
            android:id="@+id/nearby_option_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인접역 포함: 출발/도착역의\n근처역도 함께 검색"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:maxWidth="260dp"
            android:gravity="center"
            android:textAlignment="center" />

<!--        <ImageView-->
<!--            android:layout_width="16dp"-->
<!--            android:layout_height="8dp"-->
<!--            android:src="@drawable/balloon_tail"-->
<!--            android:layout_gravity="start"-->
<!--            android:layout_marginStart="20dp" />-->
    </LinearLayout>

    <!-- 옵션: SR 연계 설명 말풍선 -->
    <LinearLayout
        android:id="@+id/sr_option_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="300dp">

        <TextView
            android:id="@+id/sr_option_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SR 연계: 수서고속철도 함께 검색"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:maxWidth="240dp"
            android:gravity="center"
            android:textAlignment="center" />

<!--        <ImageView-->
<!--            android:layout_width="16dp"-->
<!--            android:layout_height="8dp"-->
<!--            android:src="@drawable/balloon_tail"-->
<!--            android:layout_gravity="start"-->
<!--            android:layout_marginStart="20dp" />-->
    </LinearLayout>


    <LinearLayout
        android:id="@+id/train_search_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="300dp">

        <TextView
            android:id="@+id/train_search_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.열차조회 클릭"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"
            android:maxWidth="240dp"
            android:gravity="center"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="start"
            android:layout_marginStart="20dp" />
    </LinearLayout>

