<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="8dp">

    <!-- 출발역 말풍선 -->
    <LinearLayout
        android:id="@+id/departure_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginTop="120dp"
        android:layout_marginStart="24dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/departure_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발역 선택"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_overlay"
            android:padding="10dp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="start"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <!-- 도착역 말풍선 -->
    <LinearLayout
        android:id="@+id/arrival_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginTop="180dp"
        android:layout_marginStart="24dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/arrival_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도착역 선택"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_overlay"
            android:padding="10dp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="start"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <!-- 출발일 말풍선 -->
    <LinearLayout
        android:id="@+id/date_select_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="180dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/date_select_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="열차 출발 날짜 선택"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_overlay"
            android:padding="10dp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- 인원수 예매 말풍선 -->
    <LinearLayout
        android:id="@+id/passenger_count_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="24dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/passenger_count_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탑승 인원 선택"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_overlay"
            android:padding="10dp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp" />
    </LinearLayout>

    <!-- SNS 로그인 (카카오톡) 말풍선 -->
    <LinearLayout
        android:id="@+id/kakao_login_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="180dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/kakao_login_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오톡 계정으로 로그인"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:background="@drawable/bg_overlay"
            android:padding="10dp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="center" />
    </LinearLayout>

</FrameLayout>
