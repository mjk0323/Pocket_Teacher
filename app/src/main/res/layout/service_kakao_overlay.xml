<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="8dp">

    <!-- 친구 탭 -->
    <LinearLayout
        android:id="@+id/freind_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="200dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/friend_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록된 친구 목록 보기"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- 채팅 탭 -->
    <LinearLayout
        android:id="@+id/chat_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="140dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/chat_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 대화 목록(오픈채팅방 제외)을 확인"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- 오픈채팅 탭 -->
    <LinearLayout
        android:id="@+id/openchat_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="200dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/openchat_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오픈채팅방의 최근 대화 목록 보기"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- 친구 추가 버튼 -->
    <LinearLayout
        android:id="@+id/add_friend_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="180dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/add_friend_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구 새로 추가하기"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- 프로필 보기 -->
    <LinearLayout
        android:id="@+id/profile_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/profile_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 프로필을 확인"
            android:textSize="14sp"
            android:textColor="@color/balloon_text"
            android:background="@drawable/bg_overlay"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:src="@drawable/balloon_tail"
            android:layout_gravity="center"/>
    </LinearLayout>

</FrameLayout>
