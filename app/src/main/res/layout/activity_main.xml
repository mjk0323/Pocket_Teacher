<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <!-- 스크롤 가능한 컨테이너 -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- 공통 툴바 -->
        <include layout="@layout/toolbar" />

        <!-- 안내 아이콘 + 문구 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="60dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_pencil" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="스마트폰 사용을 도와드릴게요\n원하는 버튼을 선택해주세요"
                android:textColor="#000000"
                android:textSize="17sp" />
        </LinearLayout>

        <!-- 버튼 1 -->
        <LinearLayout
            android:id="@+id/button_app_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:padding="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="18dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앱 안내"
                android:textSize="30sp"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오톡, 유튜브를 사용하고 싶어요"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_marginTop="30dp" />
        </LinearLayout>

        <!-- 버튼 2 -->
        <LinearLayout
            android:id="@+id/button_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:padding="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="18dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예매하기"
                android:textSize="30sp"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기차표, 야구 경기표를 예매하고 싶어요"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_marginTop="30dp" />
        </LinearLayout>

        <!-- 버튼 3 -->

        <!-- 버튼 4: 설정 -->
        <LinearLayout
            android:id="@+id/button_voice_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="음성도우미"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="물어보고 싶은게 있어요"
                android:textColor="#666666"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:padding="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="18dp"
            android:clickable="true"
            android:focusable="true">

            <!-- 제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textSize="30sp"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000" />

            <!-- 설명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문의하기, 시스템 설정 변경"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_marginTop="30dp" />
        </LinearLayout>

        <!-- ✅ 하단 여백용 뷰 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>
</ScrollView>
