<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 패딩 없는 루트 -->
    <LinearLayout
        android:id="@+id/settings_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- 헤더: 아이콘은 좌측, 제목은 화면 정중앙 -->
        <RelativeLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical">

            <!-- 뒤로가기 아이콘 (시각적 크기 ↓, 터치 영역 48dp 유지) -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="14dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="뒤로가기"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <!-- 제목: 화면 정가운데 -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="설정"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#FF000000" />
        </RelativeLayout>

        <!-- 헤더 아래 풀블리드 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6" />

        <!-- 본문: 구분선 풀블리드 위해 좌우 패딩 0, 각 행에서 자체 패딩 사용 -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- 항목 1: 자주 묻는 질문 -->
            <LinearLayout
                android:id="@+id/button_faq"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="자주 묻는 질문"
                    android:textSize="15sp"
                    android:textColor="#FF000000" />
            </LinearLayout>

            <!-- 구분선: 풀블리드 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6" />

            <!-- 항목 2: 문의하기 -->
            <LinearLayout
                android:id="@+id/button_inquiry"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="고객의 소리 (문의하기)"
                    android:textSize="15sp"
                    android:textColor="#FF000000" />
            </LinearLayout>

            <!-- 구분선: 풀블리드 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6" />

            <!-- ✅ 항목 3: 내 문의내역확인 -->
            <LinearLayout
                android:id="@+id/button_inquiry_history"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="내 문의내역확인"
                    android:textSize="15sp"
                    android:textColor="#FF000000" />
            </LinearLayout>

            <!-- 구분선: 풀블리드 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6" />

            <!-- 항목 4: 앱 정보 -->
            <LinearLayout
                android:id="@+id/button_app_info"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="앱 정보"
                    android:textSize="15sp"
                    android:textColor="#FF000000" />
            </LinearLayout>

            <!-- 마지막 구분선: 풀블리드 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
