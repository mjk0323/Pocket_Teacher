<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- 패키지 가시성 (Android 11+) -->
    <queries>
        <package android:name="com.kakao.talk" />
        <package android:name="com.google.android.youtube" />
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pocket_Teacher">
        <activity
            android:name=".VoiceAssistantActivity"
            android:exported="false" />
        <!-- 설정 화면 -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Pocket_Teacher" /> <!-- 문의 내역(Compose) -->
        <activity
            android:name=".InquiryHistoryActivity"
            android:exported="false"
            android:label="@string/title_activity_inquiry_history"
            android:theme="@style/Theme.Pocket_Teacher" /> <!-- FAQ / 문의하기 / 앱 정보 -->
        <activity
            android:name=".FAQActivity"
            android:exported="false"
            android:label="@string/title_activity_faqactivity"
            android:theme="@style/Theme.Pocket_Teacher" />
        <activity
            android:name=".InquiryActivity"
            android:exported="false"
            android:label="@string/title_activity_inquiry"
            android:theme="@style/Theme.Pocket_Teacher" /> <!-- 서비스들 (프로젝트에 맞춰 유지) -->
        <service
            android:name=".KakaoOverlayService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".YoutubeOverlayService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".TrainOverlayService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".BaseballOverlayService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".AppAccessibilityService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service> <!-- 기존 액티비티들 -->
        <activity
            android:name=".BaseballTicketActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.Pocket_Teacher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TrainTicketActivity"
            android:exported="false"
            android:label="@string/title_activity_train_ticket"
            android:theme="@style/Theme.Pocket_Teacher" />
        <activity
            android:name=".BookingActivity"
            android:exported="false"
            android:label="@string/title_activity_booking"
            android:theme="@style/Theme.Pocket_Teacher" />
        <activity
            android:name=".AppGuideActivity"
            android:exported="false"
            android:label="@string/title_activity_app_guide"
            android:theme="@style/Theme.Pocket_Teacher" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>